#ifndef __VERSION_H__
#define __VERSION_H__

#define LUNASVG_STRINGIFY(x)  #x

#define LUNASVG_VERSION_MAJOR @lunasvg_VERSION_MAJOR@
#define LUNASVG_VERSION_MINOR @lunasvg_VERSION_MINOR@
#define LUNASVG_VERSION_PATCH @lunasvg_VERSION_PATCH@

#define LUNASVG_MAKE_VERSION_DOT_STRING(x, y, z) \
    LUNASVG_STRINGIFY(x) "." LUNASVG_STRINGIFY(y) "." LUNASVG_STRINGIFY(z)

#define LUNASVG_VERSION_DOT_STRING \
    LUNASVG_MAKE_VERSION_DOT_STRING(LUNASVG_VERSION_MAJOR, LUNASVG_VERSION_MINOR, LUNASVG_VERSION_PATCH)

#endif // __VERSION_H__